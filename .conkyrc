background no
use_xft yes
xftfont ubuntu mono:size=10
xftalpha 1
update_interval 1.0
total_run_times 0
own_window yes
own_window_transparent no
own_window_type override
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
own_window_colour 111111
double_buffer yes
minimum_size 1 1
maximum_width 280
draw_shades no
draw_outline no
draw_borders no
draw_graph_borders yes
default_color 86c113
default_shade_color 000000
default_outline_color gray
alignment tr
gap_x 12
gap_y 42
no_buffers yes
uppercase no
cpu_avg_samples 2
override_utf8_locale no
color1 gray
color2 white
color3 orange
##############################################
#  Output
##############################################
TEXT
${font ubuntu mono:bold:size=10}SYSTEM ${color2}${hr 2}${color}
${font}$sysname $kernel $alignr $machine
Host:$alignr$nodename
Uptime:$alignr$uptime

CPU: $alignr${cpu cpu0}%
${color1}${voffset -5}${cpugraph cpu0 24,279 gray white}
${color2}${voffset -11}${cpubar cpu0}${color} 
RAM: $alignr$mem/$memmax
${color1}${voffset -5}${memgraph 24,279 gray white}
${color2}${voffset -11}$membar${color}

